<!--ブック編集ページ-->
<h1>Editing Book</h1>
<!--成功時・エラー時メッセージ-->
<%= render 'books/message', book: @book %>

<%= form_with model: @book, url: book_path, local: true do |f| %>
<p>
 <div>Title</div>
 <%= f.text_field :title, class:"mb-1" %>
</p>
<p>
 <div>Body</div>
 <%= f.text_field :body, class:"mb-1" %>
</p>
<div class="actions">
 <%= f.submit "Update Book", class:"btn btn-success mb-1" %>
</div>
<% end %>

<%= link_to "Show",book_path(@book.id) %>
 |
<%= link_to "Back",books_path %>