<!--ユーザーインフォを入れる　ここから-->
<p>
  <h2>User info</h2>
    <%= attachment_image_tag user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg"%>
</p>
   <table class="table">
    <tbody>
     <tr>
       <th>Name</th>
       <th><%= user.name %></th>
     </tr>
     <tr>
       <th>Introduction</th>
       <th><%= user.introduction %></th>
     </tr>

 <!--ユーザーインフォを入れる　ここまで-->



<!-- _user_infoに書く
User infoのところのfollowsとfollowersのところの
数字がリンクになっていてそこからページ遷移 -->
     <tr>
      <th>
        follows   <% link_to book_followings_path(users.user_id.followings)"follow一覧の場合のpath" do %>
        <%= user.followings.count %>
        <% end %>
      </th>
      <th>
        followers  <% link_to  book_followers_path(users.user_id.follo)"follower一覧の場合のpath" do %>
        <%= user.followers.count %>
        <% end %>
      </th>
     </tr>
    </tbody>
   </table>


<!-- フォローボタン -->
<% if current_user.following?(user) %>
  <%= link_to "Unfollow", user_relationships_path(user.id), method: :delete %>
<% else %>
  <%= link_to "Follow", user_relationships_path(user.id), method: :post %>
<% end %>






 <!--編集用ボタン-->
   <div class="row">
   <%# if user.id == current_user.id %>
    <%= link_to edit_user_path(user.id), class: "btn btn-outline-secondary btn-block" do %>
     <i class="fas fa-user-cog"></i>
    <%# end %>

    <% end %>
   </div>